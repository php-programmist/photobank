<form class="float-left mr-3" method="post" action="{{ path('batch_delete', {'id': batch.id}) }}" onsubmit="return confirm('Уверены, что хотите удалить текущую папку?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ batch.id) }}">
    <button class="btn btn-danger">Удалить</button>
</form>
