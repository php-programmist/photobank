{% extends 'base.html.twig' %}

{% block title %}Batch{% endblock %}

{% block body %}
    <h1>Batch</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ batch.id }}</td>
            </tr>
            <tr>
                <th>Folder</th>
                <td>{{ batch.folder }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ batch.domain }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ batch.createdAt ? batch.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('batch_index') }}">back to list</a>

    <a href="{{ path('batch_edit', {'id': batch.id}) }}">edit</a>

    {{ include('batch/_delete_form.html.twig') }}
{% endblock %}
